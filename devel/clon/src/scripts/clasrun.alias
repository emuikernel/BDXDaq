alias reconnect "ipc_control -a clasprod -d clasprod reconnect"
alias ipci  "ipc_info"
alias ipcis "ipc_info -s"
alias ipcia "ipc_info -a clasprod"

#  misc aliases
alias lo  logout
alias log logout
alias ll ls -al
alias ls ls -F
alias lsa ls -aF 
alias dir ls -lsF
alias pur  "rm -f *~"
alias purg "rm -f *~"
alias pur. "rm -f .*~"
alias up cd ..
alias rmf rm -f
alias rmfr rm -f -r
alias grep grep -i
alias mor more
alias psme "ps -ef | grep clasrun"
alias psef "ps -ef" 	
alias psed "perl -p -i.bak -e"
alias sterm "xterm -sb -sl 1000 -title \!:1 -e slogin \!* &"
alias xt "xterm -sb -sl 5000 -ls"
